
@{
    Layout = null;
}


<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
  
    <title>Parça Takip Sistemi</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sign-in.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">

    <main class="form-signin w-100 m-auto">
        @*bir form başlatır ve form verilerini sunucuya göndermek üzere yapılandırır.*@

        @*FormMethod.Post --> form verileri url'de görünmez, genellikte login,register, veri ekleme veya güncellemede kullanılır'*@
        @*<form action="/Login/Index" method="post"> şeklinde çıktı üretir *@

        @*FormMethod.Get --> form verileri url parametresi olarak görülür ?param=value*@
        @*Genellikle arama,filtreleme gibi veri okumaya yönelik işelmlerde kullanılır *@

        @* Veri göndermek istiyorsan Post, veri almak (arama gibi) istiyorsan Get kullanılır.*@

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <h1 class="h3 mb-3 fw-normal" style="text-align: center; margin-top: 20px;">Parça Takip Sistemi Giriş Sayfası</h1>

            <br />
            <div class="form-floating">
                <input type="text" class="form-control" id="kullaniciAd" name="kullaniciAd">
                <label for="KullaniciAd">Kullanıcı Adınız</label>
            </div>
            <br />
            <div class="form-floating">
                <input type="password" class="form-control" id="parola" name="parola">
                <label for="parola">Paralo </label>
            </div>
            <br />
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>

            <br /> <br />

            if (ViewBag.mesaj != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.mesaj
                </div>
            }
        }
    </main>
</body>
</html>
